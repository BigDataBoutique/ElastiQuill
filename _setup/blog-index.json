            },
            "email": {
              "type": "keyword"
            },
            "website": {
              "type": "keyword"
            }
          }
        },
        "draft": {
          "type": "object",
          "enabled": false
        },
        "content": {
          "type": "text"
        },
        "description": {
          "type": "text"
        },
        "metadata": {
          "type": "object",
          "enabled": false
        },
        "last_edited_at": {
          "type": "date"
        },
        "published_at": {
          "type": "date"
        },
        "slug": {
