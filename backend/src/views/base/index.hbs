<div class="container">
  <div class="row">
    <main class="col-md-9">
      {{#if posts.length}}
        {{#each (tail posts)}}
          {{> post this}}
        {{/each}}
        <p class="blog-more-posts">
          <a href="{{blogRoutePrefix}}/page/1">See more posts</a>
        </p>
      {{else}}
        {{> no-content}}
      {{/if}}
    </main>
    <aside class="col-md-3 sidebar">
      {{> sidebar}}
    </aside>
  </div>
</div>
