<form action="" method="POST">
  {{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
  {{/if}}
  {{#if success}}
  <div class="alert alert-success">
    Your message was sent, we will be in touch shortly!
  </div>
  {{/if}}
  <div class="form-row">
    <div class="form-group {{validity.name}} col-md-6 my-3">
      <label for="inputName">Name</label>
      <input type="text" name='name' value="{{values.name}}" class="form-control" id="inputName">
    </div>
    <div class="form-group {{validity.email}} col-md-6 my-3">
      <label for="inputEmail">Email</label>
      <input type="email" name='email' value="{{values.email}}" class="form-control" id="inputEmail">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group {{validity.subject}} col-md-12 my-3">
      <label for="inputSubject">Subject</label>
      <input type="subject" name='subject' value="{{values.subject}}" class="form-control" id="inputSubject">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group {{validity.content}} col-md-12 my-3">
      <label for="inputContent">Message</label>
      <textarea name='content' class="form-control" id="inputContent" rows="6">{{values.content}}</textarea>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12 my-3">
      <div class="g-recaptcha" data-sitekey="{{recaptchaClientKey}}"></div>
    </div>
  </div>  
  <input type="hidden" name="item_id" value="{{values.item_id}}" />
  <div class="form-row">
    <div class="form-group col-md-12 my-3">
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
  </div>
</form>