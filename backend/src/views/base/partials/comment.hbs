<div class="comment" data-id="{{id}}" data-index={{index}} id="{{comment_id}}">
  <div class="post-author__container d-flex justify-content-between">
    <div class="post-author">
      <a href="#">
        <img src="{{author.avatar}}" alt="{{author.name}}">
        <span class="ml-3">{{author.name}}</span>
      </a>
    </div>
    <div class="post-date">
      {{published_at_str}}
    </div>
  </div>
  <div class="comments-widget__content my-4">{{{content}}}</div>
  <div class="comments-widget__footer">
    {{#if allow_comments}}
    <a class="reply btn-add-comment" onclick="onClickReply(this)">
      <img src="/static/base/img/comment.png" alt=""><span class="secondary mx-3">Reply</span>
    </a>
    {{/if}}
  </div>
  <div class="replies-container">
    {{#each replies}}
        {{> comment this index=@index }}
    {{/each}}
  </div>
</div>