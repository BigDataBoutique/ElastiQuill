<article class="post search-result">
  <h1 class="post-title">
    <a href="{{this.url}}">{{this.title}}</a>
  </h1>
  <div class="row">
    <div class="col-lg-12">
      {{#if this.highlight.title}} {{{this.highlight.title}}}<span class="ellipsis"></span> {{/if}}
      {{#if this.highlight.description}} {{{this.highlight.description}}}<span class="ellipsis"></span> {{/if}}
      {{#if this.highlight.content}} {{{this.highlight.content}}}<span class="ellipsis"></span> {{/if}}
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-8">
        <span class="date">
          <time datetime="{{this.published_at}}">{{this.published_at_str}}</time>
        </span>
        <br>
        {{> tags tags=this.tags}}
      </div>
      <div class="col-lg-3 col-md-3 col-sm-4 read-more">
        <a href="{{this.url}}" class="pull-right">Read more Â»</a>
      </div>
    </div>
  </div>
</article>
